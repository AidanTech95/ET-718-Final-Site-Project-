<h1>Listing sneakers</h1>

<table>
  <thead>
    <tr>
      <th>Brand</th>
      <th>String</th>
      <th>Description</th>
      <th>Text</th>
      <th>Price</th>
      <th>Size</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sneakers.each do |sneaker| %>
      <tr>
        <td><%= sneaker.brand %></td>
        <td><%= sneaker.string %></td>
        <td><%= sneaker.description %></td>
        <td><%= sneaker.text %></td>
        <td><%= sneaker.price %></td>
        <td><%= sneaker.size %></td>
        <td><%= link_to 'Show', sneaker %></td>
        <td><%= link_to 'Edit', edit_sneaker_path(sneaker) %></td>
        <td><%= link_to 'Destroy', sneaker, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

